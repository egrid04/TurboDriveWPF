<Window x:Class="TurboDrive.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TurboDrive.Windows"
        mc:Ignorable="d"
        Title="Belépés" Height="150" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Left" Grid.Column="1" Margin="21,0,0,0">
            <Label Content="Felhasználói név:"></Label>
            <TextBox x:Name="usernameTextBox" Text="LakatosI"></TextBox>
            <Label Content="Jelszó:"></Label>
            <PasswordBox Password="a" x:Name="passwordTextBox"></PasswordBox>
            <Button Content="Bejelentkezés" Margin="5 5 5 5" Click="Login_Button"></Button>
        </StackPanel>
    </Grid>
</Window>
